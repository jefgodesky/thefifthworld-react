{
  "name": "thefifthworld",
  "version": "2.0.0",
  "description": "Website for the Fifth World",
  "homepage": "https://thefifthworld.com",
  "author": "Jason Godesky <jason@thefifthworld.com>",
  "license": "CC-BY-SA-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jefgodesky/thefifthworld.git"
  },
  "bugs": {
    "url": "https://github.com/jefgodesky/thefifthworld/issues",
    "email": "web@thefifthworld.com"
  },
  "scripts": {
    "start": "node server.js",
    "test": "jest --forceExit --detectOpenHandles --runInBand",
    "build": "npm-run-all js:build scss:build",
    "lint": "npm-run-all js:lint scss:lint",
    "js:build": "npm-run-all js:lint test js:compile js:compress",
    "js:lint": "eslint 'src/**/*.js'",
    "js:compile": "webpack --mode=production",
    "js:compress": "uglifyjs --compress --output public/bundle.js -- public/bundle.js",
    "scss:build": "npm-run-all scss:lint scss:compile scss:autoprefix",
    "scss:lint": "sass-lint --verbose",
    "scss:compile": "node-sass --output-style compressed -o public/css scss",
    "scss:autoprefix": "postcss -u autoprefixer -r public/css/*",
    "dev:js:build": "npm-run-all js:lint test dev:js:compile",
    "dev:js:compile": "webpack --mode=development",
    "dev:js:watch": "onchange -i 'src/**/*.js' 'src/**/*.json' -- npm run dev:js:build",
    "dev:scss:watch": "onchange -i 'scss/*.scss' 'scss/**/*.scss' -- npm run scss:build",
    "dev:serve": "nodemon server.js",
    "dev": "npm-run-all --parallel dev:js:watch dev:scss:watch dev:serve"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "elasticsearch": "^15.2.0",
    "express": "^4.16.3",
    "express-mysql-session": "^2.0.1",
    "express-session": "^1.15.6",
    "helmet": "^3.14.0",
    "mailgun-js": "^0.20.0",
    "mysql": "^2.16.0",
    "passport": "^0.4.0",
    "passport-discord": "^0.1.3",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth2": "^0.1.6",
    "passport-local": "^1.0.0",
    "passport-patreon": "^1.0.1",
    "passport-twitter": "^1.0.4",
    "react": "^16.5.0",
    "react-autobind": "^1.0.6",
    "react-dom": "^16.5.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "route-parser": "0.0.5",
    "serialize-javascript": "^1.5.0",
    "sqlstring": "^2.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.5.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^23.5.0",
    "modularscale-sass": "^3.0.8",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "normalize-scss": "^7.0.1",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "regenerator": "^0.13.2",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.1.0",
    "uglify-es": "^3.3.9",
    "uglifyjs": "^2.4.11",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "standard-react"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    },
    "rules": {
      "no-useless-escape": 0
    }
  },
  "jest": {
    "testMatch": [
      "**/?(*.)+(spec).js?(x)"
    ]
  }
}
